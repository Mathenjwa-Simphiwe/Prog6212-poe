@{
    ViewData["Title"] = "Home Page";
}

@using Prog6212_POE.Controllers
@using Prog6212_POE.ViewModel

@{
    var allClaims = SubmitController.GetClaims();
    var pendingClaims = allClaims.Count(c => c.Status == "Pending");
    var approvedThisMonth = allClaims.Count(c => c.Status == "Approved" && c.ClaimDate.Month == DateTime.Now.Month);
    var totalAmount = allClaims.Sum(c => c.Amount);
}

<div class="container">
    <header>
        <h1>Contract Monthly Claim System</h1>
        <nav class="main-nav">
            <a href="@Url.Action("Index", "Home")" class="nav-btn active">Dashboard</a>
            <a href="@Url.Action("Index", "Submit")" class="nav-btn">Submit Claim</a>
            <a href="@Url.Action("Index", "Track")" class="nav-btn">Track Claims</a>
            <a href="@Url.Action("Index", "Management")" class="nav-btn">Management</a>
        </nav>
    </header>

    <main>
        <!-- Dashboard View -->
        <div id="dashboard" class="view active">
            <h2>Dashboard</h2>
            <div class="stats-container">
                <div class="stat-card">
                    <h3>Pending Claims</h3>
                    <p class="stat-value">@pendingClaims</p>
                </div>
                <div class="stat-card">
                    <h3>Approved This Month</h3>
                    <p class="stat-value">@approvedThisMonth</p>
                </div>
                <div class="stat-card">
                    <h3>Total Amount</h3>
                    <p class="stat-value">R @totalAmount.ToString("F2")</p>
                </div>
            </div>

            <div class="recent-activity">
                <h3>Recent Activity</h3>
                @if (allClaims.Any())
                {
                    <ul>
                        @foreach (var claim in allClaims.OrderByDescending(c => c.ClaimDate).Take(5))
                        {
                            <li>
                                Claim #@claim.Id - @claim.Contract -
                                <span class="status @claim.Status.ToLower()">@claim.Status</span> -
                                R @claim.Amount.ToString("F2")
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No claims submitted yet.</p>
                }
            </div>
        </div>
    </main>
</div>

<style>
    .stats-container {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        flex: 1;
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #007bff;
        text-align: center;
    }

        .stat-card h3 {
            margin: 0 0 10px 0;
            font-size: 14px;
            color: #6c757d;
            text-transform: uppercase;
            font-weight: 600;
        }

    .stat-value {
        margin: 0;
        font-size: 24px;
        font-weight: bold;
        color: #007bff;
    }

    .status {
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: bold;
        text-transform: uppercase;
    }

        .status.pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status.approved {
            background-color: #d4edda;
            color: #155724;
        }

        .status.rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

    .main-nav {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .nav-btn {
        padding: 10px 20px;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

        .nav-btn.active {
            background: #0056b3;
        }
</style>