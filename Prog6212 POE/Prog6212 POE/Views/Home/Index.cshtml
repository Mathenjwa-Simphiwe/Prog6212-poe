@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <header>
        <h1>Contract Monthly Claim System</h1>
        <nav class="main-nav">
            <a href="@Url.Action("Index", "Home")" class="nav-btn active">Dashboard</a>
            <a href="@Url.Action("Index", "Submit")" class="nav-btn">Submit Claim</a>
            <a href="@Url.Action("Index", "Track")" class="nav-btn">Track Claims</a>
            <a href="@Url.Action("Index", "Management")" class="nav-btn">Management</a>
        </nav>
    </header>

    <main>
        <!-- Dashboard View -->
        <div id="dashboard" class="view active">
            <h2>Dashboard</h2>
            <div class="stats-container">
                <div class="stat-card">
                    <h3>Pending Claims</h3>
                    <p class="stat-value">0</p>
                </div>
                <div class="stat-card">
                    <h3>Approved This Month</h3>
                    <p class="stat-value">0</p>
                </div>
                <div class="stat-card">
                    <h3>Total Amount</h3>
                    <p class="stat-value">R0</p>
                </div>
            </div>
            <div class="recent-activity">
                <h3>Recent Activity</h3>
                <ul>
                    <li>Claims that were approved or denied will appear here</li>
                    
                </ul>
            </div>
        </div>
    </main>
