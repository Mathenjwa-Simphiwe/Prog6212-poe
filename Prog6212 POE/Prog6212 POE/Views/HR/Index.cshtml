@model dynamic
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-users-cog"></i> HR Dashboard
        </h2>
        <div>
            <a asp-action="CreateUser" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Create User
            </a>
            <a asp-action="Reports" class="btn btn-info">
                <i class="fas fa-chart-bar"></i> Generate Reports
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3>@Model.TotalUsers</h3>
                            <p>Total Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3>@Model.TotalLecturers</h3>
                            <p>Lecturers</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chalkboard-teacher fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3>@Model.TotalClaims</h3>
                            <p>Total Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice-dollar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3>@Model.PendingClaims</h3>
                            <p>Pending Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-action="Users" class="list-group-item list-group-item-action">
                            <i class="fas fa-users me-2"></i> Manage Users
                        </a>
                        <a asp-action="CreateUser" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus me-2"></i> Create New User
                        </a>
                        <a asp-action="Reports" class="list-group-item list-group-item-action">
                            <i class="fas fa-file-pdf me-2"></i> Generate Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">System Information</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-database text-info me-2"></i> Database: SQL Server</li>
                        <li><i class="fas fa-shield-alt text-success me-2"></i> Security: ASP.NET Identity</li>
                        <li><i class="fas fa-file-pdf text-danger me-2"></i> Reporting: QuestPDF</li>
                        <li><i class="fas fa-users text-primary me-2"></i> Role-based Access</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
